    public static int[] flattenAndSort(int[][] matrix) {
        int size = matrix.length * matrix[0].length;
        int[] flattened = new int[size];

        int index = 0;
        for (int[] row : matrix) {
            for (int num : row) {
                flattened[index++] = num;
            }
        }
        Arrays.sort(flattened);
        return flattened;
    }
