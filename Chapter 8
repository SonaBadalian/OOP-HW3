/*public class Main {
    private static final int ROWS = 6;
    private static final int COLUMNS = 7;
    private static final char EMPTY = '.';
    private static final char PLAYER1 = 'R';
    private static final char PLAYER2 = 'Y';

    public static void main(String[] args) {
        char[][] board = new char[ROWS][COLUMNS];
        for (char[] row : board) Arrays.fill(row, EMPTY);

        boolean player1Turn = true;
        boolean gameWon = false;
        Scanner scanner = new Scanner(System.in);
        
        while (!gameWon) {
            displayBoard(board);
            char currentPlayer = player1Turn ? PLAYER1 : PLAYER2;
            System.out.print("Drop a " + (player1Turn ? "red" : "yellow") + " disk at column (0-6): ");
            int column = scanner.nextInt();
            
            if (column < 0 || column >= COLUMNS || board[0][column] != EMPTY) {
                System.out.println("Invalid move, try again.");
                continue;
            }
            int row = dropDisk(board, column, currentPlayer);
            
            if (checkWin(board, row, column, currentPlayer)) {
                displayBoard(board);
                System.out.println("The " + (player1Turn ? "red" : "yellow") + " player won!");
                gameWon = true;
            }
            player1Turn = !player1Turn;
        }
        scanner.close();
    }
    private static void displayBoard(char[][] board) {
        for (char[] row : board) {
            for (char cell : row) {
                System.out.print("|" + cell);
            }
            System.out.println("|");
        }
        System.out.println("---------------");
    }
    private static int dropDisk(char[][] board, int column, char player) {
        for (int i = ROWS - 1; i >= 0; i--) {
            if (board[i][column] == EMPTY) {
                board[i][column] = player;
                return i;
            }
        }
        return -1;
    }
    private static boolean checkWin(char[][] board, int row, int col, char player) {
        return checkDirection(board, row, col, player, 1, 0) || 
               checkDirection(board, row, col, player, 0, 1) || 
               checkDirection(board, row, col, player, 1, 1) || 
               checkDirection(board, row, col, player, 1, -1);  
    }
    private static boolean checkDirection(char[][] board, int row, int col, char player, int rowDir, int colDir) {
        int count = 1;
        count += countConsecutive(board, row, col, player, rowDir, colDir);
        count += countConsecutive(board, row, col, player, -rowDir, -colDir);
        return count >= 4;
    }
    private static int countConsecutive(char[][] board, int row, int col, char player, int rowDir, int colDir) {
        int count = 0;
        for (int i = 1; i < 4; i++) {
            int newRow = row + i * rowDir;
            int newCol = col + i * colDir;
            if (newRow >= 0 && newRow < ROWS && newCol >= 0 && newCol < COLUMNS && board[newRow][newCol] == player) {
                count++;
            } else {
                break;
            }
        }
        return count;
    }
} */
 
