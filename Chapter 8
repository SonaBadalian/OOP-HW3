            if (count % 2 != 0) {
                return false; 
            }
        }

        return true;
    }
    public static boolean hasEvenOnes(int[] array) {
        int count = 0;
        for (int num : array) {
            if (num == 1) {
                count++;
            }
        }
        return count % 2 == 0;
