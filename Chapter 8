/*public class Main {
    public static double[] linearEquation(double[][] a, double[] b) {
        double a00 = a[0][0], a01 = a[0][1];
        double a10 = a[1][0], a11 = a[1][1];
        double b0 = b[0], b1 = b[1];
        double determinant = a00 * a11 - a01 * a10;

        if (determinant == 0) {
            return null; 
